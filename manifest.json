{
    "manifest_version": 2,
    "name": "&copy;",
    "version": "0.0.3",

    "description": "Unescapes HTML entity codes and copies to clipboard",
    "icons": {
        "128": "images/icon128.png"
    },

    "browser_action": {
        "default_icon": {
            "32": "images/icon32.png"
        },
        "default_title": "Copy HTML Entity",
        "default_popup": "src/popup.html"
    },

    "author": "github/supposedly",
    "permissions": ["clipboardWrite", "storage"]
}